<UserControl x:Class="NotecardFront.SearchSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <local:SearchBox x:Name="txtSearch" Opacity="0" SelectionMade="txtSearch_SelectionMade" GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
        <TextBlock Name="lblSelection" Margin="3" IsHitTestVisible="False" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
