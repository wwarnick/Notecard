<UserControl x:Class="NotecardFront.TextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <TextBlock Name="lblName" Margin="5" VerticalAlignment="Center"/>
        <TextBox Name="txtValue" Grid.Column="1" MinHeight="20" MinWidth="100" Margin="0 5 10 0" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" LostFocus="txtValue_LostFocus"/>
        <Rectangle Name="rctResize" Grid.Column="1" Grid.Row="1" Margin="0 0 10 0" Fill="Transparent" Cursor="SizeNS" MouseDown="rctResize_MouseDown"/>
    </Grid>
</UserControl>
