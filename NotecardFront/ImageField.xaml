<UserControl x:Class="NotecardFront.ImageField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="grdImage" HorizontalAlignment="Center" Grid.Column="1" Background="Transparent" AllowDrop="True" PreviewDragEnter="Grid_PreviewDragEnterOver" PreviewDragOver="Grid_PreviewDragEnterOver" PreviewDrop="Grid_PreviewDrop" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
            <Image Name="imgImage" Visibility="Collapsed" MaxHeight="200" MaxWidth="200"/>
            <Button Name="btnDelete" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Visibility="Collapsed" Click="btnDelete_Click">X</Button>
            <Button Name="btnBrowse" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Click="btnBrowse_Click">Browse...</Button>
        </Grid>
    </Grid>
</UserControl>
