<UserControl x:Class="NotecardFront.CardField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <local:SearchBox x:Name="txtSearch" Grid.Column="1" Grid.ColumnSpan="3" MinWidth="100" MinHeight="20" Margin="10 5 10 5" SelectionMade="txtSearch_SelectionMade" GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
        <Button Name="btnSelection" Grid.Column="1" MinHeight="20" Visibility="Collapsed" HorizontalContentAlignment="Left" TextElement.FontWeight="Bold" TextElement.FontStyle="Italic" Margin="10 0 0 0" Click="btnSelection_Click" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
        <TextBlock Name="lblRemove" Grid.Column="2" VerticalAlignment="Center" Margin="0 0 10 0" Width="20" TextAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed">X</TextBlock>
    </Grid>
</UserControl>
