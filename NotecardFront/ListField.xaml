<UserControl x:Class="NotecardFront.ListField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Name="stkMain">
        <Grid Tag="label">
            <Button Name="btnMinimize" Content="^" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontWeight="Bold" Padding="0 0 5 0" HorizontalContentAlignment="Right" Click="btnMinimize_Click"/>
            <TextBlock Name="lblName" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>
        <Button Name="btnAddItem" MaxHeight="15" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="0" Click="btnAddItem_Click" Tag="add">+</Button>
    </StackPanel>
</UserControl>
