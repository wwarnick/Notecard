<UserControl x:Class="NotecardFront.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Name="stkMain" Background="AliceBlue" MouseDown="stkMain_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <Label Name="lblCardType" Background="Green" Foreground="White" FontSize="10"/>
            <Button Name="btnArchive" Grid.Column="1" Click="btnArchive_Click">X</Button>
        </Grid>
    </StackPanel>
</UserControl>
