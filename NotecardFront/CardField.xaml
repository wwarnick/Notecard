<UserControl x:Class="NotecardFront.CardField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotecardFront"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="lblName" Margin="5" VerticalAlignment="Center"/>
        <local:SearchBox x:Name="txtSearch" Grid.Column="1" Grid.ColumnSpan="2" MinWidth="100" MinHeight="20" Margin="0 5 10 5" SelectionMade="txtSearch_SelectionMade" GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
        <TextBlock Name="lblSelection" Grid.Column="1" VerticalAlignment="Center" MinHeight="20" Visibility="Collapsed" TextDecorations="Underline" Cursor="Hand"/>
        <TextBlock Name="lblRemove" Grid.Column="3" VerticalAlignment="Center" Margin="0 0 10 0" Width="20" TextAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed">X</TextBlock>
    </Grid>
</UserControl>
